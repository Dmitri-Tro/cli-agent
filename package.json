{
  "name": "cli-agent",
  "version": "2.0.0",
  "description": "Interactive CLI agent with modular architecture that interprets natural language commands in Russian for safe filesystem operations",
  "main": "dist/index.js",
  "bin": {
    "cli-agent": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "start:dry-run": "cross-env NODE_ENV=production node dist/index.js --dry-run",
    "start:discuss": "cross-env NODE_ENV=production node dist/index.js --discuss",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "npx vitest",
    "test:ui": "npx vitest --ui",
    "test:run": "npx vitest run",
    "test:coverage": "npx vitest run --coverage",
    "test:watch": "npx vitest --watch",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc --project tsconfig.test.json --noEmit"
  },
  "keywords": [
    "cli",
    "ai",
    "openai",
    "filesystem",
    "typescript",
    "russian",
    "natural-language",
    "русский"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/iconv-lite": "^0.0.1",
    "@types/node": "^22.18.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.9",
    "pino-pretty": "^12.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "iconv-lite": "^0.7.0",
    "openai": "^5.15.0",
    "pino": "^9.9.0",
    "zod": "^3.25.76"
  }
}
